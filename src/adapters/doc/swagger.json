{
	"openapi": "3.1.0",
	"info": {
		"title": "Users API - OpenAPI 3.0",
		"description": "",
		"version": "1.0.0"
	},
	"servers": [
		{
			"url": "http://localhost:3000/api/v1"
		}
	],
	"paths": {
		"/admin/crearPropietario": {
			"post": {
				"tags": ["Users"],
				"summary": "Create owner",
				"description": "Create a new owner",
        "security": [
          {
            "bearerAuth": []
          }
        ],
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/UserCreate"
							}
						}
					}
				},
				"responses": {
					"201": {
						"description": "Successful Response",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/SuccessfulResponse"
								}
							}
						}
					},
					"400": {
						"description": "Missing data or with any wrong.",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/FailResponse"
								}
							}
						}
					}
				}
			}
		},
		"/user": {
			"get": {
				"tags": ["Users"],
				"summary": "Get user details by ID and query.",
				"description": "Get user details by ID and query parameters.\nExample: /api/v1/user?id=1&querySearch=role",
				"parameters": [
					{
						"name": "id",
						"in": "query",
						"description": "User ID",
						"required": true,
						"schema": {
							"type": "number",
							"example": 1
						}
					},
					{
						"name": "querySearch",
						"in": "query",
						"description": "Query search",
						"required": true,
						"schema": {
							"type": "string",
							"example": "role"
						}
					}
				],
				"responses": {
					"200": {
						"description": "Successful Response",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/SuccessfulResponse"
								}
							}
						}
					},
					"400": {
						"description": "Missing data or with any wrong.",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/FailResponse"
								}
							}
						}
					}
				}
			}
		},
		"/user/iniciar-sesion": {
			"post": {
				"tags": ["Users"],
				"summary": "Login",
				"description": "Login",
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/UserLogin"
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Successful Response",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/SuccessfulResponse"
								}
							}
						}
					},
					"400": {
						"description": "Missing data or with any wrong.",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/FailResponse"
								}
							}
						}
					},
					"401": {
						"description": "Unauthorized",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/FailResponse"
								}
							}
						}
					},
					"404": {
						"description": "User not found",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/FailResponse"
								}
							}
						}
					}
				}
			}
		}
	},
	"components": {
    "securitySchemes": {
			"bearerAuth": {
				"type": "http",
				"scheme": "bearer",
				"bearerFormat": "JWT",
				"description": "Authorization header using the Bearer scheme. Provide a valid JWT token."
			}
		},
		"schemas": {
			"UserCreate": {
				"type": "object",
				"properties": {
					"nombre": {
						"type": "string",
						"example": "nombre"
					},
					"apellido": {
						"type": "string",
						"example": "apellido"
					},
					"numero_documento": {
						"type": "string",
						"example": "123456789"
					},
					"celular": {
						"type": "string",
						"example": "0000000000"
					},
					"fecha_nacimiento": {
						"type": "string",
						"example": "2000-01-01"
					},
					"correo": {
						"type": "string",
						"example": "example@email.com"
					},
					"clave": {
						"type": "string",
						"example": "clave"
					}
				}
			},
			"UserLogin": {
				"type": "object",
				"properties": {
					"correo": {
						"type": "string",
						"example": "example@email.com"
					},
					"clave": {
						"type": "string",
						"example": "clave"
					}
				}
			},
			"SuccessfulResponse": {
				"type": "object",
				"properties": {
					"message": {
						"type": "string",
						"example": "successful confirmation message"
					}
				}
			},
			"FailResponse": {
				"type": "object",
				"properties": {
					"statusCode": {
						"type": "number",
						"example": "http status code"
					},
					"errorMessage": {
						"type": "string",
						"example": "fail message"
					}
				}
			}
		}
	},
  "security": [
		{
			"bearerAuth": []
		}
	]
}
